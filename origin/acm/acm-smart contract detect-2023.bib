series = {ICCIR '22}
}

@inproceedings{10.1145/3477314.3507118,
author = {Kambilo, Eddy Kiomba and Zghal, Hajer Baazaoui and Guegan, Chirine Ghedira and Stankovski, Vlado and Kochovski, Petar and Vodislav, Dan},
