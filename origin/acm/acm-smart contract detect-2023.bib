booktitle = {Proceedings of the 2022 4th Blockchain and Internet of Things Conference},
pages = {46–53},
numpages = {8},
keywords = {Electricity Retail Contracts on-chaining, Blockchain, Electricity Market, Data Security, Retail Contract Disputes},
