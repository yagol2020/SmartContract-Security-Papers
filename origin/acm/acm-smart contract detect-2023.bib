@inproceedings{10.1145/3543507.3583281,
author = {Wang, Ziwei and Gao, Jiashi and Wei, Xuetao},
title = {Do NFTs’ Owners Really Possess Their Assets? A First Look at the NFT-to-Asset Connection Fragility},
