author = {Chen, Weimin and Li, Xinran and Sui, Yuting and He, Ningyu and Wang, Haoyu and Wu, Lei and Luo, Xiapu},
title = {SADPonzi: Detecting and Characterizing Ponzi Schemes in Ethereum Smart Contracts},
year = {2022},
