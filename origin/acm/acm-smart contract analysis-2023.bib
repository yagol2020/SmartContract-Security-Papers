keywords = {Trading bots, Ethereum, BNB Smart Chain, AMM},
location = {Austin, TX, USA},
series = {WWW '23 Companion}
}

@inproceedings{10.1145/3494106.3528675,
author = {Jiang, Yu and Fan, Sizheng and Cai, Wei},
title = {Economic Analysis of Loot Box Market in Blockchain Games},
